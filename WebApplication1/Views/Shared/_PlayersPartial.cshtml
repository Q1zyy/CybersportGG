@model WebApplication1.ViewModels.PlayersListViewModel;
<head>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<link rel="stylesheet" href="~/css/teamslistpartial.css" />

<body>
	@if (Model.Players != null && Model.Players.Count != 0)
	{
		<div class="container">
			@foreach (var player in Model.Players)
			{
				<div class="block">
					<div class="image-container">
						<img src="data:image /png;base64,@(Convert.ToBase64String(player.Image))" />
					</div>
					<div class="content">
						<h3>@player.Nickname</h3>
						<div class="buttons">
							<button id="addButton" data-id="@player.Id" data-teamid="@Model.Id">Add</button>
							<button id="deleteButton" class="remove" data-id="@player.Id" data-teamid="@Model.Id">Delete</button>
						</div>
					</div>
				</div>
			}
		</div>
	}
</body>

<script>
	$(document).ready(function () {
		$('#addButton').click(function () {
			var id = $(this).data('id');
			var teamId = $(this).data('teamid');
			$.ajax({
				url: '@Url.Action("AddPlayer", "Team")',
				data: { id: id, teamId: teamId },
				success: function (result) {
					window.location.reload();
				}
			});
		});
	});
</script>


<script>
	$(document).ready(function () {
		$('#deleteButton').click(function () {
			var id = $(this).data('id');
			var teamId = $(this).data('teamid');
			$.ajax({
				url: '@Url.Action("DeletePlayer", "Team")',
				data: { id: id, teamId: teamId },
				success: function (result) {
					window.location.reload();
				}
			});
		});
	});
</script>

