@model WebApplication1.ViewModels.UserViewModel
@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/register.css" />
<body>
    <div class="container">
        <h2>Регистрация</h2>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div>
                <label>Имя пользователя:</label>
                <input asp-for="Username" placeholder="Введите имя пользователя" required />
                <span asp-validation-for="Username"></span>
            </div>
            <div>
                <label>Пароль:</label>
                <input asp-for="Password" type="password" placeholder="Введите пароль" required />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <input type="submit">
            </div>
        </form>
    </div>
</body>