@model WebApplication1.ViewModels.PlayerViewModel
@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/createplayer.css" />
<body>
    <div class="container">
        <h1>Создание игрока</h1>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Загрузите фото:</label>
                <input required type="file" asp-for="Image" />
            </div>
            <div class="form-group">
                <label for="title">Введите ник</label>
                <input required asp-for="Nickname" />
            </div>
            <div class="form-group">
                <label for="title">Введите имя</label>
                <input required asp-for="Name" />
            </div>
            <div class="form-group">
                <label for="title">Возраст</label>
                <input type="number" max="200" required asp-for="Age"/>
            </div>
            <div class="form-group">
                <input value="Отправить" type="submit">
            </div>
        </form>
    </div>
</body>
